<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/level2_button_pressed_gradient_background_color1"
                android:endColor="@color/level2_button_pressed_gradient_background_color2"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/level2_button_pressed_stroke_color" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    
    <item>        
        <shape>
            <gradient
                android:startColor="@color/level2_button_normal_gradient_background_color1"
                android:endColor="@color/level2_button_normal_gradient_background_color2"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/level2_button_normal_stroke_color" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>