<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/main_layout"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical"
    android:padding="10dip"
    android:background="@color/background"
    >
    <LinearLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    >
     <TextView
  	 	android:id="@+id/game_selection_title_text_view"
      	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
      	android:textSize="25sp"
      	android:layout_gravity="center"
      	android:textColor="@color/text_color"
      />
          <TextView
        android:id="@+id/game_selection_subtitle_text_view"
      	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
      	android:textSize="20sp"
      	android:layout_gravity="center"
      	android:textColor="@color/text_color"
      />
            <TextView
        android:id="@+id/game_selection_action_text_view"
      	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
      	android:textSize="15sp"
      	android:layout_gravity="center"
      	android:textColor="@color/text_color"
      />
 
            
      	<com.ezeeideas.wordjam.SpinnerButton
      	    android:id="@+id/game_options_spinner_button"
      	    android:layout_width="wrap_content"
      	    android:layout_height="wrap_content"
      	    android:layout_gravity="center"
      	    />
      	<ImageView
      	    android:src="@drawable/games_wheel_lever"
      	    android:layout_width="wrap_content"
      	    android:layout_height="wrap_content"
      	    android:layout_gravity="center"
      	    />
      	
      		<ImageButton
    	android:id="@+id/game_play_button"
    	android:src="@drawable/play_hangman_button"
    	android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
    	android:layout_gravity="center"
        android:background="@color/transparent"
        ></ImageButton>
      	
    	<ImageButton
    	android:id="@+id/back_button"
    	android:src="@drawable/test2"
    	android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
    	android:layout_gravity="center"
        android:background="@color/transparent"
        ></ImageButton>

    	</LinearLayout>
</RelativeLayout>
