<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/game_dialog_root_layout"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:padding="10dp"
              >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >
    	<ImageView
               android:layout_width="wrap_content"
               android:layout_height="fill_parent"
               android:layout_marginRight="10dp"
               android:src="@drawable/test_result"
               />
 
        <TextView android:id="@+id/dialog_title"
            android:text="@string/test_pass_title"
            	android:textSize="25sp"
              android:layout_width="wrap_content"
              android:layout_height="fill_parent"
              android:textColor="#FFFFFFFF"
              />
 	</LinearLayout>
 	
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@color/gray_translucent1"
            >
            <TextView android:id="@+id/points_to_be_earned_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                />
           	<TextView android:id="@+id/points_to_be_earned_description_text_view"
           	    android:layout_width="wrap_content"
           	    android:layout_height="wrap_content"
           	    android:textSize="20sp"
           	    android:layout_gravity="center_horizontal"
           	    android:gravity="center_horizontal"
           	    android:text="@string/points_to_be_earned_description_text"
           	    
           	    />
           	</LinearLayout>
           	    
                <LinearLayout
            android:orientation="vertical"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            >
            <TextView android:id="@+id/games_to_be_completed_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textSize="40sp"
                />
           	<TextView android:id="@+id/games_to_be_completed_description_text_view"
           	    android:layout_width="wrap_content"
           	    android:layout_height="wrap_content"
           	    android:textSize="20sp"
           	    android:layout_gravity="center_horizontal"
           	    android:gravity="center_horizontal"
           	    android:text="@string/games_to_be_completed_description_text"
           	    />
           	    </LinearLayout>
           	    
                                <LinearLayout
            android:orientation="vertical"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            >
            <TextView android:id="@+id/hints_available_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textSize="40sp"
                />
           	<TextView android:id="@+id/hints_available_description_text_view"
           	    android:layout_width="wrap_content"
           	    android:layout_height="wrap_content"
           	    android:textSize="20sp"
           	    android:layout_gravity="center_horizontal"
           	    android:gravity="center_horizontal"
           	    android:text="@string/hints_available_description_text"
           	    />
           	    </LinearLayout>
 	</LinearLayout>
 	
        <TextView android:id="@+id/footer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="30sp"
            android:text="@string/dialog_level_welcome_footer_text"
            />

</LinearLayout>