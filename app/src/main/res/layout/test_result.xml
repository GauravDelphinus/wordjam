<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_root"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:padding="10dp"
              >
    <ImageView android:id="@+id/test_pass_image"
               android:layout_width="wrap_content"
               android:layout_height="fill_parent"
               android:layout_marginRight="10dp"
               android:src="@drawable/test_result"
               />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView android:id="@+id/test_result_title"
            android:text="@string/test_result_title"
            	android:textSize="25sp"
              android:layout_width="wrap_content"
              android:layout_height="fill_parent"
              android:textColor="#FFFFFFFF"
              />
        <View
            android:layout_height="10sp"
            android:layout_width="fill_parent"
            />
        <TableLayout
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_gravity="center"
         android:stretchColumns="*">
         <TableRow>
    <TextView
        android:text="@string/test_result_total_tests"
        	android:textSize="15sp"
              android:layout_width="wrap_content"
              android:layout_height="fill_parent"
              android:textColor="#FFFFFFFF"
              />
     <TextView
        android:id="@+id/test_result_total_tests"
        	android:textSize="15sp"
              android:layout_width="wrap_content"
              android:layout_height="fill_parent"
              android:textColor="#FFFFFFFF"
              />
    </TableRow>
    <TableRow>
    <TextView
        android:text="@string/test_result_passed_tests"
        	android:textSize="15sp"
              android:layout_width="wrap_content"
              android:layout_height="fill_parent"
              android:textColor="#FFFFFFFF"
              />
     <TextView
        android:id="@+id/test_result_passed_tests"
        	android:textSize="15sp"
              android:layout_width="wrap_content"
              android:layout_height="fill_parent"
              android:textColor="#FFFFFFFF"
              />
    </TableRow>
    <TableRow>
    <TextView
        android:text="@string/test_result_hints_used"
        	android:textSize="15sp"
              android:layout_width="wrap_content"
              android:layout_height="fill_parent"
              android:textColor="#FFFFFFFF"
              />
     <TextView
        android:id="@+id/test_result_hints_used"
        	android:textSize="15sp"
              android:layout_width="wrap_content"
              android:layout_height="fill_parent"
              android:textColor="#FFFFFFFF"
              />
    </TableRow>
    </TableLayout>
    <View
            android:layout_height="10sp"
            android:layout_width="fill_parent"
            />
    <TextView
        android:text="@string/test_result_text"
        	android:textSize="15sp"
              android:layout_width="wrap_content"
              android:layout_height="fill_parent"
              android:textColor="#FFFFFFFF"
              />
    </LinearLayout>
</LinearLayout>