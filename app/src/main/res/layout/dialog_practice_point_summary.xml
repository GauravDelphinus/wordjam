<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/game_dialog_root_layout"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:padding="10dp"
              >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >
    	<ImageView
               android:layout_width="wrap_content"
               android:layout_height="fill_parent"
               android:layout_marginRight="10dp"
               android:src="@drawable/test_result"
               />
 
        <TextView
            android:id="@+id/dialog_practice_point_summary_title_text_view"
            android:text="@string/dialog_practice_point_summary_title_text"
            	android:textSize="@dimen/screen_title_text_size"
              android:layout_width="wrap_content"
              android:layout_height="fill_parent"
              android:textColor="#FFFFFFFF"
              />
 	</LinearLayout>
 	
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:background="@color/gray1"
            android:padding="10dip"
            >
            <TextView android:id="@+id/points_earned_value_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/game_summary_number_text_size"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                />
           	<TextView
           	    android:layout_width="wrap_content"
           	    android:layout_height="wrap_content"
           	    android:textSize="@dimen/game_summary_description_text_size"
           	    android:layout_gravity="center_horizontal"
           	    android:gravity="center_horizontal"
           	    android:text="@string/points_earned_description_text"
           	    
           	    />
           	    </LinearLayout>
           	    
                <LinearLayout
            android:orientation="vertical"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:background="@color/gray2"
            android:padding="10dip"
            >
            <TextView android:id="@+id/games_completed_value_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textSize="@dimen/game_summary_number_text_size"
                />
           	<TextView 
           	    android:layout_width="wrap_content"
           	    android:layout_height="wrap_content"
           	    android:textSize="@dimen/game_summary_description_text_size"
           	    android:layout_gravity="center_horizontal"
           	    android:gravity="center_horizontal"
           	    android:text="@string/games_completed_description_text"
           	    />

           	    </LinearLayout>
 	</LinearLayout>
 	
     <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:background="@color/gray2"
            android:padding="10dip"
            >
            <TextView android:id="@+id/hints_used_value_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textSize="@dimen/game_summary_number_text_size"
                />
           	<TextView 
           	    android:layout_width="wrap_content"
           	    android:layout_height="wrap_content"
           	    android:layout_gravity="center_horizontal"
           	    android:gravity="center_horizontal"
           	    android:textSize="@dimen/game_summary_description_text_size"
           	    android:text="@string/hints_used_description_text"
           	    />

           	    </LinearLayout>
           	    
                <LinearLayout
            android:orientation="vertical"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:background="@color/gray1"
            android:padding="10dip"
            >
            <TextView android:id="@+id/time_spent_value_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textSize="@dimen/game_summary_number_text_size"
                />
           	<TextView 
           	    android:layout_width="wrap_content"
           	    android:layout_height="wrap_content"
           	    android:textSize="@dimen/game_summary_description_text_size"
           	    android:layout_gravity="center_horizontal"
           	    android:gravity="center_horizontal"
           	    android:text="@string/time_spent_description_text"
           	    />

           	    </LinearLayout>
 	</LinearLayout>
 	
     <View
         android:layout_height="10dip"
         android:layout_width="fill_parent"
         />

        <TextView android:id="@+id/footer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/dialog_continue_text_size"
            android:layout_gravity="center"
            android:text="@string/dialog_practice_point_summary_footer_text"
            />

</LinearLayout>