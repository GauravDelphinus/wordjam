<?xml version="1.0" encoding="utf-8"?>
  <LinearLayout
	android:id="@+id/main_layout"
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:orientation="vertical"
  	android:padding="10dip"
  	>
  	
          	<TextView
	    	android:id="@+id/help_title_text_view"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_gravity="center"
	        android:textColor="@color/header_text_color"
	        android:textAppearance="@style/testHeading"
	        android:layout_centerHorizontal="true"
	        android:textStyle="bold"
	        android:textSize="@dimen/game_title_text_size" />
          	
          	    <View
        android:id="@+id/rule_header"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="@color/rule" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="10dip" />
    
  <ScrollView
  	android:id="@+id/scrollview"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:layout_weight="1"
  	android:orientation="vertical"
  	>

  <LinearLayout
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:orientation="vertical"
  	>
      
  	 	<TextView
  	 	android:id="@+id/help_goal"
      	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
      	android:textSize="@dimen/game_title_text_size"
      	android:textColor="@color/text_color"
      	android:textStyle="italic|bold"
      	android:layout_gravity="center"
      	android:gravity="center"
      />
      
      <View
      	android:layout_height="5dip"
      	android:layout_width="fill_parent"
      	/>
      	
      <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/rounded_corner"
          android:padding="10dip"
          android:gravity="center"
          android:layout_gravity="center"
          android:orientation="vertical"
          >
                	<TextView
      	    android:layout_width="fill_parent"
      	    android:layout_height="wrap_content"
      	    android:text="@string/help_tips_title_text"
      	    android:layout_gravity="center"
      	    android:gravity="center"
      	    android:textStyle="bold"
      	    android:textColor="@color/black"
      	    android:textSize="@dimen/game_title_text_size"
      	    />
      	<TextView
  	 	android:id="@+id/help_tips"
      	android:layout_width="fill_parent"
      	android:layout_height="wrap_content"
      	android:textColor="@color/text_color"
      	android:layout_gravity="center"
      	android:gravity="left"
      	android:textSize="@dimen/default_text_size"
      />
      	</LinearLayout>
      	
            <View
      	android:layout_height="5dip"
      	android:layout_width="fill_parent"
      	/>
      	
      <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/rounded_corner"
          android:padding="10dip"
          android:gravity="center"
          android:layout_gravity="center"
          android:orientation="vertical"
          >
      	<TextView
      	    android:layout_width="fill_parent"
      	    android:layout_height="wrap_content"
      	    android:text="@string/help_points_title_text"
      	    android:layout_gravity="center"
      	    android:gravity="center"
      	    android:textStyle="bold"
      	    android:textColor="@color/black"
      	    android:textSize="@dimen/game_title_text_size"
      	    />
      	<TextView
  	 	android:id="@+id/help_points"
      	android:layout_width="fill_parent"
      	android:layout_height="wrap_content"
      	android:textColor="@color/text_color"
      	android:layout_gravity="center"
      	android:gravity="left"
      	android:textSize="@dimen/default_text_size"
      />
      	</LinearLayout>
      <View
      	android:layout_height="5dip"
      	android:layout_width="fill_parent"
      	/>
      <TableLayout
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:stretchColumns="1">
         <TableRow>
         
   	<ImageView
   		android:id="@+id/stop_help_button"
      	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
      	android:src="@drawable/stop_button"
      	android:padding="5dip"
      	android:layout_weight="0"
      	android:layout_gravity="center_vertical"
      />

   	<TextView
   		android:id="@+id/stop_help_text"
      	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
      	android:textColor="@color/text_color"
      	android:layout_weight="1"
      	android:layout_gravity="center_vertical"
      	android:textSize="@dimen/default_text_size"
      />
     
      </TableRow>

         <TableRow>
      <ImageView
      	android:id="@+id/pause_help_button"
      	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
      	android:src="@drawable/pause_button"
      	android:layout_weight="0"
      	android:layout_gravity="center_vertical"
      />

   	<TextView
   		android:id="@+id/pause_help_text"
      	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
      	android:textColor="@color/text_color"
      	android:layout_weight="1"
      	android:layout_gravity="center_vertical"
      	android:textSize="@dimen/default_text_size"
      />
      </TableRow>
      
       <TableRow>
      <ImageView
      	android:id="@+id/reveal_help_button"
      	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
      	android:src="@drawable/reveal_button"
      	android:layout_weight="0"
      	android:layout_gravity="center_vertical"
      />

   	<TextView
   		android:id="@+id/reveal_help_text"
      	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
      	android:textColor="@color/text_color"
      	android:layout_weight="1"
      	android:layout_gravity="center_vertical"
      	android:textSize="@dimen/default_text_size"
      />
      </TableRow>
         <TableRow>
        <ImageView
      	android:id="@+id/hint_help_button"
      	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
      	android:src="@drawable/hint_button"
      	android:layout_weight="0"
      	android:layout_gravity="center_vertical"
      />

   	<TextView
   		android:id="@+id/hint_help_text"
      	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
      	android:textColor="@color/text_color"
      	android:layout_weight="1"
      	android:layout_gravity="center_vertical"
      	android:textSize="@dimen/default_text_size"
      />
      
            
      </TableRow>
      
         <TableRow>
        <ImageView
      	android:id="@+id/sharehelp_button"
      	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
      	android:src="@drawable/facebook_button"
      	android:layout_weight="0"
      	android:layout_gravity="center_vertical"
      />

   	<TextView
   		android:id="@+id/share_help_text"
      	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
      	android:textColor="@color/text_color"
      	android:layout_weight="1"
      	android:layout_gravity="center_vertical"
      	android:textSize="@dimen/default_text_size"
      />
      
            
      </TableRow>
            
         <TableRow>
        <ImageView
      	android:id="@+id/help_help_button"
      	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
      	android:src="@drawable/help_button"
      	android:layout_weight="0"
      	android:layout_gravity="center_vertical"
      />

   	<TextView
   		android:id="@+id/help_help_text"
      	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
      	android:textColor="@color/text_color"
      	android:layout_weight="1"
      	android:layout_gravity="center_vertical"
      	android:textSize="@dimen/default_text_size"
      />
      
            
      </TableRow>  
         <TableRow>
        <ImageView
      	android:id="@+id/next_help_button"
      	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
      	android:src="@drawable/next_button"
      	android:layout_weight="0"
      	android:layout_gravity="center_vertical"
      />

   	<TextView
   		android:id="@+id/next_help_text"
      	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
      	android:textColor="@color/text_color"
      	android:layout_weight="1"
      	android:layout_gravity="center_vertical"
      	android:textSize="@dimen/default_text_size"
      />
      
            
      </TableRow>
      

    
      
</TableLayout>
</LinearLayout>
</ScrollView>

      <View
        android:layout_width="fill_parent"
        android:layout_height="10dip" />
      
        	    <View
        android:id="@+id/rule_header"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="@color/rule" />


    	
    	<ImageButton
    	android:id="@+id/back_button"
    	android:src="@drawable/test2"
    	android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
    	android:layout_gravity="center"
        android:background="@color/transparent"
        ></ImageButton>
</LinearLayout>