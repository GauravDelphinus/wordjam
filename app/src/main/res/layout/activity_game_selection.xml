<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
	android:id="@+id/main_layout"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical"
    android:padding="10dip"
    android:background="@color/background"
    >
    <LinearLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    >
     <TextView
  	 	android:id="@+id/game_selection_title_text_view"
      	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
      	android:textSize="@dimen/screen_title_text_size"
      	android:layout_gravity="center"
      	android:textColor="@color/text_color"
      />
          <TextView
        android:id="@+id/game_selection_subtitle_text_view"
      	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
      	android:textSize="@dimen/screen_subtitle_text_size"
      	android:layout_gravity="center"
      	android:textColor="@color/text_color"
      />
    
          <View
      	android:layout_height="15dip"
      	android:layout_width="fill_parent"
      	/>
      	  <LinearLayout 
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    >
    <Button
        android:id="@+id/recall_words_button"
        android:layout_width="0px"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:drawableLeft="@drawable/word_meaning_test"
        android:textSize="@dimen/ui_button_text_size"
        android:text="@string/recall_words_label" />
    <Button
    	android:id="@+id/match_words_button"
    	android:layout_width="0px"
    	android:layout_height="fill_parent"
    	android:layout_weight="1"
    	android:drawableLeft="@drawable/match_words_test"
    	android:textSize="@dimen/ui_button_text_size"
    	android:text="@string/match_words_label" />
    	</LinearLayout>
    	<LinearLayout 
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    >
    <Button
    	android:id="@+id/hangman_button"
    	android:layout_width="0px"
    	android:layout_height="fill_parent"
    	android:layout_weight="1"
    	android:drawableLeft="@drawable/hangman_test"
    	android:textSize="@dimen/ui_button_text_size"
    	android:text="@string/hangman_label" />
    	
    <Button
    	android:id="@+id/crossword_button"
    	android:layout_width="0px"
    	android:layout_height="fill_parent"
    	android:layout_weight="1"
    	android:drawableLeft="@drawable/crossword_test"
    	android:textSize="@dimen/ui_button_text_size"
    	android:text="@string/crossword_label" />
</LinearLayout>
    	<LinearLayout 
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    >
    	   	<Button
    	android:id="@+id/word_jumble_button"
    	android:layout_width="0px"
    	android:layout_height="fill_parent"
    	android:layout_weight="1"
    	android:drawableLeft="@drawable/word_jumble_test"
    	android:textSize="@dimen/ui_button_text_size"
    	android:text="@string/word_jumble_label" />
    	
    		   	<Button
    	android:id="@+id/word_search_button"
    	android:layout_width="0px"
    	android:layout_height="fill_parent"
    	android:layout_weight="1"
    	android:drawableLeft="@drawable/word_search_test"
    	android:textSize="@dimen/ui_button_text_size"
    	android:text="@string/word_search_label" />
    	</LinearLayout>
    	
    	       <View
    	android:layout_width="fill_parent"
    	android:layout_height="20dip"
    	/>
          
      	
    	<ImageButton
    	android:id="@+id/back_button"
    	android:src="@drawable/test2"
    	android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
    	android:layout_gravity="center"
        android:background="@color/transparent"
        ></ImageButton>


    	</LinearLayout>

</RelativeLayout>
