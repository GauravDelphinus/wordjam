<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical" >

  	<com.ezeeideas.wordjam.WordSearchPanel
  	    xmlns:android="http://schemas.android.com/apk/res/android"
  	    android:id="@+id/wordsearchpanel"
  	    android:layout_width="fill_parent"
  	    android:layout_height="0px"
  	    android:layout_weight="0.70"
  	    android:orientation="vertical" >

  		<View
  		    android:id="@+id/wordsearchview"
  		    android:layout_width="fill_parent"
  		    android:layout_height="fill_parent" />
  
  	</com.ezeeideas.wordjam.WordSearchPanel>
  
  	<TextView
  	    android:id="@+id/wordlist_heading"
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:layout_gravity="center"
  	    android:textSize="@dimen/word_search_list_heading_text_size"
  	    android:textColor="@color/text_color" />
      
  	<LinearLayout
  	    android:layout_width="fill_parent"
  	    android:layout_height="0px"
  	    android:layout_weight="0.30"
  	    android:orientation="horizontal" 
  	    >

  		<LinearLayout
  		    android:layout_width="0px"
  		    android:layout_height="fill_parent"
  		    android:layout_weight="0.5"
  		    android:orientation="vertical" >
  
  			<ListView
  			    android:id="@+id/wordlist_left"
  			    android:layout_width="fill_parent"
  			    android:layout_height="fill_parent"
  			    android:cacheColorHint="@color/transparent" />

  		</LinearLayout>

  	<LinearLayout
  	    android:layout_width="0px"
  	    android:layout_height="fill_parent"
  	    android:layout_weight="0.5"
  	    android:orientation="vertical" >
  
  	<ListView
  	    android:id="@+id/wordlist_right"
  	    android:layout_width="fill_parent"
  	    android:layout_height="fill_parent"
  	    android:cacheColorHint="@color/transparent" />

  </LinearLayout>
</LinearLayout>
</LinearLayout>