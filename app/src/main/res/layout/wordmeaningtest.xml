<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/main_layout"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dip"
    android:background="@color/background"
    >
    	    <TextView
    	android:id="@+id/test_heading"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/header_text_color"
        android:textAppearance="@style/testHeading"
        android:textSize="20sp" />
        
    	    <View
    	android:id="@+id/rule_header"
    	android:layout_width="fill_parent"
    	android:layout_height="2dip"
    	android:background="@color/rule"
    	/>
    	    	    <View
    	android:layout_width="fill_parent"
    	android:layout_height="10dip"
    	/>
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center_vertical"

    >
    <TextView
    	android:id="@+id/given_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="25dip"
        android:layout_weight="1"
        android:textColor="@color/given_text_color"
		/>
    <Button
        android:id="@+id/choice1_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <Button
    	android:id="@+id/choice2_button"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"/>
    <Button
    	android:id="@+id/choice3_button"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"/>
    <Button
    	android:id="@+id/choice4_button"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"/>
 </LinearLayout>
    	<View
    	android:layout_width="fill_parent"
    	android:layout_height="10dip"
    	/>
    	  <View
    	  android:id="@+id/rule_footer"
    	android:layout_width="fill_parent"
    	android:layout_height="2dip"
    	android:background="@color/rule"
    	android:layout_gravity="bottom"
    	/>
    	
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1">
    <TableRow>
   <ImageButton
    	android:id="@+id/stop"
    	android:src="@drawable/stop_button"
    	android:layout_width="0dip"
    	android:layout_height="wrap_content"
    	android:layout_weight="1"
        android:background="@color/transparent"
        ></ImageButton>
        
        <ImageButton
    	android:id="@+id/reveal"
    	android:src="@drawable/reveal_button"
    	android:layout_width="0dip"
    	android:layout_height="wrap_content"
    	android:layout_weight="1"
        android:background="@color/transparent"
        ></ImageButton>
 
       <ImageButton
    	android:id="@+id/hint"
    	android:src="@drawable/hint_button"
    	android:layout_width="0dip"
    	android:layout_height="wrap_content"
    	android:layout_weight="1"
    	android:background="@color/transparent"
        ></ImageButton>
   
 <ImageButton
    	android:id="@+id/help"
    	android:src="@drawable/help_button"
    	android:layout_width="0dip"
    	android:layout_height="wrap_content"
    	android:layout_weight="1"
    	android:background="@color/transparent"
        ></ImageButton>
         
        
            
        
       
        <ImageButton
    	android:id="@+id/next"
    	android:src="@drawable/next_button"
    	android:layout_width="0dip"
    	android:layout_height="wrap_content"
    	android:layout_weight="1"
        android:background="@color/transparent"
        ></ImageButton>
        
        </TableRow>
        </TableLayout>
</LinearLayout>
