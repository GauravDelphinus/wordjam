<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/main_layout"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical"
    android:padding="30dip"
    android:background="@color/background"
    >
<LinearLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    >
           <TextView
  	 	android:id="@+id/activity_level_home_title_text_view"
      	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
      	android:textSize="25sp"
      	android:layout_gravity="center"
      	android:textColor="@color/text_color"
      />
               <TextView
        android:id="@+id/activity_level_home_subtitle_text_view"
  	 	android:text="@string/activity_level_home_subtitle_text"
      	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
      	android:textSize="15sp"
      	android:layout_gravity="center"
      	android:textColor="@color/text_color"
      />
       <View
    	android:layout_width="fill_parent"
    	android:layout_height="10dip"
    	/>

 
                  
        <com.ezeeideas.wordjam.PieButton
    	android:id="@+id/level_choices_view"
    	android:src="@drawable/level_options_button_normal"
    	android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
    	android:layout_gravity="center"
        android:background="@color/transparent"
        ></com.ezeeideas.wordjam.PieButton>
        

    	<ImageButton
    	android:id="@+id/back_button"
    	android:src="@drawable/test2"
    	android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
    	android:layout_gravity="center"
        android:background="@color/transparent"
        ></ImageButton>
        
</LinearLayout>
</RelativeLayout>