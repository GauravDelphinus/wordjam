<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game_dialog_root_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp" >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_game_giveup_title_text"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/dialog_title_text_size" />

        <View
            android:layout_height="10sp"
            android:layout_width="fill_parent"
            />
        
        <TextView
            android:id="@+id/dialog_game_giveup_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/dialog_description_text_size" />
        
              
        <View
            android:layout_width="fill_parent"
            android:layout_height="10sp" />
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            
        <Button
            android:id="@+id/giveup_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:text="@string/give_up_button_text"
            android:textSize="@dimen/ui_button_text_size"
            android:drawableLeft="@drawable/reveal_normal"
            android:layout_weight="1"
            />
        

              
                </LinearLayout>
            
        <View
            android:layout_width="fill_parent"
            android:layout_height="10sp" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/dialog_game_giveup_footer_text"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/dialog_continue_text_size" />

</LinearLayout>




    