<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/main_layout"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical"
    android:padding="10dip"
    android:background="@color/background"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    >
     <TextView
  	 	android:id="@+id/level_selection_title"
  	 	android:text="@string/level_selection_heading"
      	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
      	android:textSize="25sp"
      	android:layout_gravity="center"
      	android:textColor="@color/text_color"
      />
    <ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:layout_weight="1"
  android:padding="10dip">
   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    >
   
      <View
      	android:layout_height="15dip"
      	android:layout_width="fill_parent"
      	/>
      	  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    >
    <Button
        android:id="@+id/level_1_button"
        android:layout_width="0px"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:drawableLeft="@drawable/done_normal"
        android:text="@string/level_1_label" />
    <Button
    	android:id="@+id/level_2_button"
    	android:layout_width="0px"
    	android:layout_height="fill_parent"
    	android:layout_weight="1"
    	android:drawableLeft="@drawable/done_normal"
    	android:text="@string/level_2_label" />
    <Button
    	android:id="@+id/level_3_button"
    	android:layout_width="0px"
    	android:layout_height="fill_parent"
    	android:layout_weight="1"
    	android:drawableLeft="@drawable/done_normal"
    	android:text="@string/level_3_label" />
    	</LinearLayout>
    	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    <Button
        android:id="@+id/level_4_button"
        android:layout_width="0px"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:drawableLeft="@drawable/done_normal"
        android:text="@string/level_4_label" />
    <Button
    	android:id="@+id/level_5_button"
    	android:layout_width="0px"
    	android:layout_height="fill_parent"
    	android:layout_weight="1"
    	android:drawableLeft="@drawable/done_normal"
    	android:text="@string/level_5_label" />
    <Button
    	android:id="@+id/level_6_button"
    	android:layout_width="0px"
    	android:layout_height="fill_parent"
    	android:layout_weight="1"
    	android:drawableLeft="@drawable/done_normal"
    	android:text="@string/level_6_label" />
    	</LinearLayout>
    	
    	       <View
    	android:layout_width="fill_parent"
    	android:layout_height="20dip"
    	/>
    	        </LinearLayout>
        </ScrollView>
    	<ImageButton
    	android:id="@+id/back_button"
    	android:src="@drawable/test2"
    	android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
    	android:layout_gravity="center"
        android:background="@color/transparent"
        ></ImageButton>

    	</LinearLayout>
</RelativeLayout>
