<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/main_layout"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical"
    android:padding="10dip"
    android:background="@color/background"
    >
    <LinearLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    >
     <TextView
  	 	android:id="@+id/test_selection_title"
  	 	android:text="@string/test_selection_heading"
      	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
      	android:textSize="25sp"
      	android:layout_gravity="center"
      	android:textColor="@color/text_color"
      />
    <ScrollView
 
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:layout_weight="1"
  android:padding="10dip">
   <LinearLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    >
   
      <View
      	android:layout_height="15dip"
      	android:layout_width="fill_parent"
      	/>
      	  <LinearLayout 
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    >
    <Button
    	android:id="@+id/hangman_button"
    	android:layout_width="0px"
    	android:layout_height="fill_parent"
    	android:layout_weight="1"
    	android:drawableLeft="@drawable/hangman_test"
    	android:text="@string/hangman_label" />
        <Button
    	android:id="@+id/crossword_button"
    	android:layout_width="0px"
    	android:layout_height="fill_parent"
    	android:layout_weight="1"
    	android:drawableLeft="@drawable/crossword_test"
    	android:text="@string/crossword_label" />
    	</LinearLayout>
    	<LinearLayout 
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    >


    	   	<Button
    	android:id="@+id/wordjumble_button"
    	android:layout_width="0px"
    	android:layout_height="fill_parent"
    	android:layout_weight="1"
    	android:drawableLeft="@drawable/word_jumble_test"
    	android:text="@string/word_jumble_label" />
    	
    		   	<Button
    	android:id="@+id/wordsearch_button"
    	android:layout_width="0px"
    	android:layout_height="fill_parent"
    	android:layout_weight="1"
    	android:drawableLeft="@drawable/word_search_test"
    	android:text="@string/word_search_label" />
    	</LinearLayout>
    	
    	       <View
    	android:layout_width="fill_parent"
    	android:layout_height="20dip"
    	/>
    	        </LinearLayout>
        </ScrollView>
    	<ImageButton
    	android:id="@+id/back_button"
    	android:src="@drawable/test2"
    	android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
    	android:layout_gravity="center"
        android:background="@color/transparent"
        ></ImageButton>

    	</LinearLayout>
</RelativeLayout>
