    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    
    <LinearLayout
	    android:id="@+id/game_main_layout"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="@color/background"
	    android:baselineAligned="false"
	    android:orientation="horizontal"
	    android:layout_weight="1"
	    android:padding="3dip" >
	
	    <LinearLayout
	        android:layout_width="0dip"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        android:padding="5dip" >
	    
	 		<include layout="@layout/game_upper_layout_land" />
	 	
	 		<include layout="@layout/game_word_search_layout_land" />
	 	
		</LinearLayout>
	    	
	    <include layout="@layout/game_right_layout_land" />
	        
	</LinearLayout>

    <include layout="@layout/game_bottom_ad_banner" />
    
</LinearLayout>